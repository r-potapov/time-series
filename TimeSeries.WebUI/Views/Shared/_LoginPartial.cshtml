@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOut", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul>
        <li>@Html.ActionLink("Временные ряды", "List", "TimeSerie")</li>
        <li>
            <a href="#">Визуализация</a>
            <ul class="center">
                <li>@Html.ActionLink("Визуализация", "Visualize", "TimeSerie")</li>
                <li>@Html.ActionLink("Фазовый портрет", "Phase", "TimeSerie")</li>
            </ul>
        </li>
        <li>
            @{/*@Html.ActionLink("Здравствуйте, " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })*/}
            <a href="#" style="color:#0094ff;">@User.Identity.GetUserName()</a>
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Выйти</a></li>
    </ul>
    }
}
else
{
    <ul>
        <li>@Html.ActionLink("Вход", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
        <li>@Html.ActionLink("Регистрация", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
    </ul>
}
